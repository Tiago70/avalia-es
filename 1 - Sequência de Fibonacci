#include <stdio.h>

int main() {
	
	int b = 0, b2 = 1, num;
	printf("Coloque o numero que deseja verificar: ");
	scanf("%d", &num);
    
    while(1){
    	if (num == b || num ==b2){
    		printf("O numero percence a sequencia");
        break;
		}
        b += b2;
        b2 += b;
        if (b > num){
        	printf("O numero nao pertence a sequencia: ");
        	break;
		}
    }
    return 0;
}
